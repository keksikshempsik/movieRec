<Window x:Class="MovieRecV5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieRecV5"
        mc:Ignorable="d"
        Title="Movie Search" Height="600" Width="900">
    <Grid Margin="0,0,-15,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="71*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="SearchTextBox" 
                 HorizontalAlignment="Left" 
                 Margin="10,10,0,0" 
                 TextWrapping="Wrap" 
                 Text="Введите название..." 
                 VerticalAlignment="Top" 
                 Width="160" 
                 Height="29" 
                 Foreground="Gray" 
                 FontSize="16" 
                 GotFocus="SearchTextBox_GotFocus" 
                 LostFocus="SearchTextBox_LostFocus"
                 KeyDown="SearchTextBox_KeyDown"/>
        <Button Name="SearchButton" Content="Поиск" HorizontalAlignment="Left" Margin="190,10,0,0" VerticalAlignment="Top" Width="70" Height="29" FontSize="16" Click="SearchButton_Click"/>
        <ProgressBar Name="SearchProgressBar" HorizontalAlignment="Left" Height="20" Margin="630,17,0,0" VerticalAlignment="Top" Width="120" IsIndeterminate="False" />

        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10,50,10,10" Grid.ColumnSpan="2">
            <WrapPanel x:Name="MoviesPanel" HorizontalAlignment="Center"/>
        </ScrollViewer>

        <!-- ОБНОВЛЕННАЯ КНОПКА -->
        <Button Name="UserProfileButton" Content="Вход/Регистрация" HorizontalAlignment="Left" Margin="765,11,0,0" VerticalAlignment="Top" Width="120" Height="29" Click="UserProfileButton_Click" Grid.ColumnSpan="2"/>
    </Grid>
</Window>