<Page x:Class="MovieRecV5.MovieInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Детали фильма">

    <Page.Resources>
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1a1a2e" Offset="0"/>
            <GradientStop Color="#16213e" Offset="0.5"/>
            <GradientStop Color="#0f3460" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="GoldGradientBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFD700" Offset="0"/>
            <GradientStop Color="#FFEC8B" Offset="0.5"/>
            <GradientStop Color="#DAA520" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="TitleTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="ContentTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- ЗАМЕНИТЕ GenreChipStyle на этот вариант -->
        <Style x:Key="GenreChipStyle" TargetType="Border">
            <Setter Property="Background" Value="#4a4a8a"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,8,8"/>
        </Style>

        <!-- ЗАМЕНИТЕ ModernButtonStyle на этот вариант -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="{StaticResource GoldGradientBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4a4a8a"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Page.Background>
        <StaticResource ResourceKey="BackgroundGradient"/>
    </Page.Background>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0">
        <Grid Margin="20">
            <!-- Основной контент -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="300"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Заголовок и кнопка назад -->
                <Grid Grid.Row="0" Margin="0,0,0,30">
                    <Button x:Name="BackButton" Content="← Назад к поиску" 
                            Click="BackButton_Click"
                            Style="{StaticResource ModernButtonStyle}"
                            HorizontalAlignment="Left"
                            Padding="15,8"/>

                    <TextBlock Text="ДЕТАЛИ ФИЛЬМА" 
                               Style="{StaticResource TitleTextStyle}"
                               FontSize="28"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>

                <!-- Основная информация о фильме -->
                <Grid Grid.Row="1" Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Постер - УБРАЛ CornerRadius -->
                    <Border Grid.Column="0" 
                            Background="#2a2a4a" 
                            BorderBrush="{StaticResource GoldGradientBrush}" 
                            BorderThickness="2"
                            Margin="0,0,30,0">
                        <Image x:Name="MoviePoster" 
                               Source="{Binding Poster}" 
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Width="180" 
                               Height="270"/>
                    </Border>

                    <!-- Основные детали -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <!-- Название -->
                        <TextBlock x:Name="MovieTitle" 
                                   Text="{Binding Title}"
                                   Style="{StaticResource TitleTextStyle}"
                                   FontSize="32"
                                   Margin="0,0,0,15"/>

                        <!-- Год и рейтинг -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <!-- УБРАЛ CornerRadius -->
                            <Border Background="#4a4a8a" Padding="10,5">
                                <TextBlock Text="{Binding Year}" 
                                           Foreground="White" 
                                           FontWeight="SemiBold"/>
                            </Border>

                            <!-- УБРАЛ CornerRadius -->
                            <Border Background="{StaticResource GoldGradientBrush}" 
                                    Padding="10,5" 
                                    Margin="10,0,0,0">
                                <TextBlock Text="{Binding Rating, StringFormat={}{0}/10}" 
                                           Foreground="#1a1a2e" 
                                           FontWeight="Bold"/>
                            </Border>
                        </StackPanel>

                        <!-- Жанры -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="ЖАНРЫ" 
                                       Style="{StaticResource TitleTextStyle}"
                                       FontSize="16"
                                       Margin="0,0,0,8"/>

                            <ItemsControl x:Name="GenresList" ItemsSource="{Binding Genres}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource GenreChipStyle}">
                                            <TextBlock Text="{Binding}" 
                                                       Foreground="White" 
                                                       FontSize="12"
                                                       FontWeight="SemiBold"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- Разделитель -->
                <Rectangle Grid.Row="2" 
                           Fill="{StaticResource GoldGradientBrush}" 
                           Height="2" 
                           Margin="0,0,0,30"
                           Opacity="0.6"/>

                <!-- Описание -->
                <StackPanel Grid.Row="3">
                    <TextBlock Text="ОПИСАНИЕ" 
                               Style="{StaticResource TitleTextStyle}"
                               FontSize="20"
                               Margin="0,0,0,15"/>

                    <!-- УБРАЛ CornerRadius -->
                    <Border Background="#2a2a4a" 
                            Padding="20" 
                            BorderBrush="#4a4a8a" 
                            BorderThickness="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200">
                            <TextBlock x:Name="MovieDescription" 
                                       Text="{Binding Description}"
                                       Style="{StaticResource ContentTextStyle}"
                                       FontSize="15"
                                       LineHeight="22"
                                       TextAlignment="Justify"/>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>