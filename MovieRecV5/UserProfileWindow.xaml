<Window x:Class="MovieRecV5.UserProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Профиль пользователя" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопка назад -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="BackButton" 
                    Content="Назад" 
                    Click="BackButton_Click"
                    Width="80"
                    Height="25"/>

            <TextBlock Text="Профиль пользователя" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Основная информация о пользователе -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Аватар -->
            <Border Grid.Column="0"
                    Width="80" 
                    Height="80"
                    Background="LightGray"
                    Margin="0,0,10,0">
                <TextBlock x:Name="UserInitialsText"
                           Text="??" 
                           FontSize="16" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <!-- Информация справа -->
            <StackPanel Grid.Column="1">
                <TextBlock x:Name="UserNameText" 
                           FontSize="14" 
                           FontWeight="Bold" 
                           TextWrapping="Wrap"
                           Margin="0,0,0,5"/>

                <TextBlock x:Name="UserEmailText" 
                           FontSize="12" 
                           Margin="0,0,0,5"/>
            </StackPanel>
        </Grid>

        <!-- Статистика и действия -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Статистика -->
            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Text="Статистика:" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="Просмотрено фильмов" FontSize="11" Foreground="Gray" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="WatchedCountText" Text="0" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="В избранном" FontSize="11" Foreground="Gray" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="FavoritesCountText" Text="0" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="Оценок" FontSize="11" Foreground="Gray" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="RatingsCountText" Text="0" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- Действия -->
            <StackPanel Grid.Row="1" Margin="0,0,0,10">
                <TextBlock Text="Действия:" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>

                <StackPanel>
                    <Button Content="Редактировать профиль" 
                            Click="EditProfileButton_Click"
                            Width="150"
                            Height="25"
                            Margin="0,2"/>

                    <Button Content="Избранные фильмы" 
                            Click="FavoritesButton_Click"
                            Width="150"
                            Height="25"
                            Margin="0,2"/>

                    <Button Content="История просмотров" 
                            Click="HistoryButton_Click"
                            Width="150"
                            Height="25"
                            Margin="0,2"/>

                    <Button Content="Настройки" 
                            Click="SettingsButton_Click"
                            Width="150"
                            Height="25"
                            Margin="0,2"/>
                </StackPanel>
            </StackPanel>

            <!-- Недавняя активность -->
            <StackPanel Grid.Row="2">
                <TextBlock Text="Недавняя активность:" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>

                <TextBox x:Name="ActivityText" 
                         TextWrapping="Wrap" 
                         FontSize="12"
                         Height="100"
                         IsReadOnly="True"
                         VerticalScrollBarVisibility="Auto"
                         Text="Активность отсутствует"/>
            </StackPanel>
        </Grid>

        <!-- Кнопка выхода -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="LogoutButton"
                    Content="Выйти из аккаунта" 
                    Click="LogoutButton_Click"
                    Width="120"
                    Height="25"/>
        </StackPanel>
    </Grid>
</Window>