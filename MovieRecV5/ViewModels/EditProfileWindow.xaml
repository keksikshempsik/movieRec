<Window x:Class="MovieRecV5.ViewModels.EditProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование профиля" Height="450" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Редактирование профиля" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,10"/>

        <!-- Форма редактирования -->
        <StackPanel Grid.Row="1">
            <!-- Аватар -->
            <Border Width="100" 
                    Height="100" 
                    Background="LightGray" 
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20">
                <Image x:Name="AvatarImage" 
                       Stretch="Uniform"/>
                <Border.Effect>
                    <DropShadowEffect Opacity="0.3" BlurRadius="5"/>
                </Border.Effect>
            </Border>

            <!-- Кнопки выбора аватара -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20">
                <Button Content="Выбрать файл" 
                        Click="SelectAvatarButton_Click"
                        Width="100"
                        Margin="0,0,5,0"/>
                <Button Content="Сбросить" 
                        Click="ResetAvatarButton_Click"
                        Width="80"/>
            </StackPanel>

            <!-- Поля редактирования -->
            <StackPanel>
                <TextBlock Text="Логин:" FontWeight="Bold"/>
                <TextBox x:Name="LoginTextBox" 
                         IsReadOnly="True"
                         Background="#F0F0F0"
                         Margin="0,2,0,10"/>

                <TextBlock Text="Отображаемое имя:" FontWeight="Bold"/>
                <TextBox x:Name="DisplayNameTextBox" 
                         MaxLength="50"
                         Margin="0,2,0,10"/>

                <TextBlock Text="Email:" FontWeight="Bold"/>
                <TextBox x:Name="EmailTextBox" 
                         MaxLength="100"
                         Margin="0,2,0,10"/>

                <TextBlock Text="Новый пароль (оставьте пустым, чтобы не менять):" 
                           FontWeight="Bold"/>
                <PasswordBox x:Name="NewPasswordBox" 
                             Margin="0,2,0,10"/>

                <TextBlock Text="Подтверждение пароля:" 
                           FontWeight="Bold"/>
                <PasswordBox x:Name="ConfirmPasswordBox" 
                             Margin="0,2,0,10"/>
            </StackPanel>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Отмена" 
                    Click="CancelButton_Click"
                    Width="80"
                    Margin="0,0,5,0"/>
            <Button Content="Сохранить" 
                    Click="SaveButton_Click"
                    Width="80"
                    Background="#4CAF50"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>