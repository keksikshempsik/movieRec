<Window x:Class="MovieRecV5.ViewModels.WatchedMoviesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Просмотренные фильмы" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопка назад -->
        <Border Grid.Row="0" Background="#2D2D2D" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="BackButton" 
                        Content="← Назад" 
                        Click="BackButton_Click"
                        Width="80"
                        Height="30"
                        FontSize="14"
                        Margin="0,0,10,0"/>

                <TextBlock Grid.Column="1" 
                           Text="Просмотренные фильмы" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="White"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Контейнер для фильмов -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="10">
            <WrapPanel x:Name="MoviesPanel" HorizontalAlignment="Center"/>
        </ScrollViewer>

        <!-- Текст при отсутствии фильмов -->
        <Grid Grid.Row="1" x:Name="NoMoviesGrid" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="📺" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="Вы еще не посмотрели ни одного фильма" 
                           FontSize="14" 
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="10"/>
                <Button Content="Найти фильмы"
                        Click="FindMoviesButton_Click"
                        Width="120"
                        Height="30"
                        Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>