<Page x:Class="MovieRecV5.ViewModels.EditProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Редактирование профиля">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Редактирование профиля" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Аватарка -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Аватарка" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,5"/>

            <Border Width="150" 
                    Height="150" 
                    Background="LightGray" 
                    CornerRadius="75"
                    BorderBrush="Gray" 
                    BorderThickness="2">
                <Image x:Name="AvatarImage"
                       Stretch="UniformToFill"/>
            </Border>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button x:Name="ChangeAvatarButton"
                        Content="Изменить аватар"
                        Click="ChangeAvatarButton_Click"
                        Width="120"
                        Height="25"
                        Margin="0,0,10,0"/>

                <Button x:Name="RemoveAvatarButton"
                        Content="Удалить"
                        Click="RemoveAvatarButton_Click"
                        Width="80"
                        Height="25"/>
            </StackPanel>

            <TextBlock x:Name="AvatarInfoText"
                       Text="Рекомендуемый размер: 150x150 пикселей"
                       FontSize="10"
                       Foreground="Gray"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Отображаемое имя -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Отображаемое имя *" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,5"/>

            <TextBox x:Name="DisplayNameTextBox"
                     Height="25"
                     MaxLength="50"/>

            <TextBlock Text="Это имя будут видеть другие пользователи"
                       FontSize="10"
                       Foreground="Gray"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Email -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="Email *" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,5"/>

            <TextBox x:Name="EmailTextBox"
                     Height="25"/>

            <TextBlock x:Name="EmailErrorText"
                       Foreground="Red"
                       FontSize="10"
                       Visibility="Collapsed"/>
        </StackPanel>

        <!-- Информация -->
        <Border Grid.Row="4" 
                Background="#FFF0F0F0" 
                CornerRadius="5" 
                Padding="10"
                Margin="0,0,0,20">
            <TextBlock Text="Логин нельзя изменить. Отображаемое имя может повторяться у разных пользователей."
                       TextWrapping="Wrap"
                       FontSize="11"/>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CancelButton"
                    Content="Отмена"
                    Click="CancelButton_Click"
                    Width="80"
                    Height="30"
                    Margin="0,0,10,0"/>

            <Button x:Name="SaveButton"
                    Content="Сохранить"
                    Click="SaveButton_Click"
                    Width="80"
                    Height="30"
                    Background="#FF007ACC"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Page>