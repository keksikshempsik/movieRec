<Window x:Class="MovieRecV5.ViewModels.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Authentication" Height="275" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Регистрация и вход" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <RadioButton x:Name="rbLogin" Content="Вход" IsChecked="True" GroupName="AuthMode" Margin="5"/>
            <RadioButton x:Name="rbRegister" Content="Регистрация" GroupName="AuthMode" Margin="5"/>
        </StackPanel>

        <StackPanel Margin="0,10,0,0">
            <TextBlock Text="Логин:"/>
            <TextBox x:Name="txtLogin" Margin="0,5,0,0"/>

            <TextBlock Text="Пароль:" Margin="0,10,0,0"/>
            <PasswordBox x:Name="txtPassword" Margin="0,5,0,0"/>

            <!-- Дополнительные поля для регистрации -->
            <StackPanel x:Name="pnlRegister" Visibility="Collapsed">

                <!-- Здесь можно добавить другие поля, например, email, если логин - не email -->
                <TextBlock Text="Email:" Margin="0,10,0,0"/>
                <TextBox x:Name="txtEmail" Margin="0,5,0,0"/>
            </StackPanel>

            <Button x:Name="btnSubmit" Content="Войти" Click="BtnSubmit_Click" Margin="0,20,0,0" Height="25"/>
        </StackPanel>
    </StackPanel>
</Window>